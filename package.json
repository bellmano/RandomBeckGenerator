{
  "name": "randombeckgenerator",
  "version": "1.0.0",
  "description": "A website that helps you choose a random Beck movie to watch. Perfect for when you can't decide which Beck film to enjoy!",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/script.js",
      "src/fetchRatings.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "transform": {}
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}